<div class="main_content">
  <div class="row" id="workout_top">
    <div class="col-md-4">
      <%= image_tag @workout.image.url(:medium), class: "workout_image" %>
    </div>
    <div class="col-md-8">
      <div id="workout_info">
        <h1>
          <%= @workout.workout %>
        </h1>
        <p class="mood">
          <%= @workout.mood %>
        </p>
        <p>
          Submitted by
          <%= @workout.user.email %>
        </p>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div id="exercises">
        <h2>Exercises</h2>
        <ul>
          <% @workout.exercises.each do |exercise| %>
            <li>
              <%= exercise.name %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="col-md-6">
      <div id="directions">
        <h2>Directions</h2>
        <ul>
          <% @workout.directions.each do |direction| %>
            <li>
              <%= direction.description %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= link_to "Back", root_path, class: "btn btn-default" %>
      <% if user_signed_in? %>
        <%= link_to "Edit", edit_workout_path, class: "btn btn-default" %>
        <%= link_to "Delete", workout_path, method: :delete, data: {confirm: "Are you sure you want to delete this awesome workout?" }, class: "btn btn-default" %>
        <%= link_to "Next Workout", workout_path(@workout.id+1) %>
        
        <% end %>
    </div>
  </div>
</div>


